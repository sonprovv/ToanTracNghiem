<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/add_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm ảnh từ thư viện" />

    <ImageView
        android:id="@+id/question_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:contentDescription="Ảnh câu hỏi" />

    <EditText
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Câu hỏi"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lựa chọn 1"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lựa chọn 2"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lựa chọn 3"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Lựa chọn 4"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/correct_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án đúng (A, B, C, D)"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/next_question_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiếp tục" />
</LinearLayout>
